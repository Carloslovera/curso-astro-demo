---
import Layout from '../layouts/Layout.astro';
import menu from '../data/menu.json';
---
<Layout title="menu">
      
  <h1 class="text-2xl font-bold mb-4">Menú del Día</h1>
  <button onclick="location.href='/'">Volver al menu</button>
  <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
    {menu.map(item => (
      <div class="bg-white p-4 rounded shadow">
        <img src={item.imagen} alt={item.nombre} class="w-full h-48 object-cover mb-2" />
        <h3 class="text-xl font-semibold">{item.nombre}</h3>
        <p class="text-green-700 font-bold">{item.precio}</p>
      </div>
    ))}
  </div>
</Layout>